@attribute [Route($"/{nameof(ProjectForm)}/{{Key?}}")]

@inherits ShiftForm<ProjectForm, ToDo.Shared.DTOs.Project.ProjectDTO>

<ShiftEntityForm @bind-Mode="Mode"
                 @bind-Value="TheItem"
                 @ref="FormContainer"
                 Action="Project"
                 Title="Project"
                 TypeAuthAction="ToDo.Shared.ToDoActions.Project"
                 @bind-Key="@Key">

    <MudTextFieldExtended
                  OnlyValidateIfDirty="true"
                  Label="Name"
                  @bind-Value="TheItem.Name"
                  For="@(() => TheItem.Name)" />
</ShiftEntityForm>

@code {
    [Parameter]
    public string? ProjectName { get; set; }

    protected override void OnInitialized()
    {
        if (!string.IsNullOrWhiteSpace(ProjectName))
        {
            TheItem.Name = ProjectName;
        }
    }
}